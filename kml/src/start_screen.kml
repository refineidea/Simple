<krpano>
	
	<_
		tour_started="false"
	/>

	<layer name="poster"
		keep="true"
		url="../poster.jpg"
		align="center"
		enabled="false"
		width="1200"
		height="600"
		x="0" y="0"
		alpha="1"
		vr="true"
		onloaded="
			resize();

			// nothing should be vesible BEFORE start screen
			delayedcall(0.5,
				set(layer[open_catalog].visible, true);
				set(layer[bottom_control_bar].visible, true);
			);			
		"
		resize="
			if (visible,
				div(ratio, stagewidth, stageheight);
				if(ratio LT 2,
					div(scale, stageheight, height);
				,
					div(scale, stagewidth, width);
				);
			);			
		"
		hide="
			tween(alpha, 0, 1.5, easeInOutCubic);
			
		"
		zorder="10"
	/>

	<layer name="play_tour"
		url="../img/start_screen.png"
		crop="0|0|120|120"
		keep="true"

		align="center"
		x.desktop="0" x.tablet="0" x.mobile="-80"
		y.desktop="0" y.tablet="0" y.mobile="0"

		scale.desktop="0.5"
		scale.tablet="0.5"

		zorder="11"
		vr="true"

		ondown.touch="
			set(layer[ring].parent, play_tour);
			copy(layer[ring].y, ring_y);
			callwith(layer[ring], layer[ring].show());
		"
		onup.touch="
			delayedcall(hide_ring, 0.1,
				callwith(layer[ring], layer[ring].hide());
			);
		"
		onover.desktop="
			callwith(layer[ring], layer[ring].show());
		"
		onout.desktop="
			ifnot (_.tour_started,
				delayedcall(hide_ring, 0.1,
					callwith(layer[ring], layer[ring].hide());
				);
			);
		"
		onclick="
			stopdelayedcall(hide_ring);
			set(layer[ring].parent, '');

			// this it workaround for my old ipad
			// it showed ring somewhere because of copy with resolving 'x'
			copy(layer[ring].x, 0);
			if (device.mobile, 
				copy(layer[ring].x, x);
			);
			
			copy(layer[ring].y, 0);

			set(_.tour_started, true);
			tween(layer[go_VR_already].alpha|layer[play_tour].alpha, 0|0, , ,
				set(layer[play_tour].visible, false);
				set(layer[go_VR_already].visible, false);
			);
			delayedcall(0.15,
				tween(layer[ring].x, 0, 0.5, ,
					loadscene(0, null, MERGE, BLEND(0.5));
				);
				delayedcall(0.2,
					loadingpercent_startloading();
				);
			);
		"
	/>

	<layer name="go_VR_already"
		url="../img/start_screen.png"
		crop="120|0|120|120"
		keep="true"

		devices="mobile"

		align="center"
		x.desktop="0" x.tablet="0" x.mobile="80"
		y.desktop="0" y.tablet="0" y.mobile="0"

		zorder="11"
		vr="true"

		ondown.touch="
			set(layer[ring].parent, go_VR_already);
			callwith(layer[ring], layer[ring].show());
		"
		onup.touch="
			delayedcall(hide_ring, 0.1,
				callwith(layer[ring], layer[ring].hide());
			);
		"

		onclick="
			stopdelayedcall(hide_ring);
			webvr.enterVR();
			delayedcall(1,
				set(layer[ring].parent, '');
				copy(layer[ring].x, x);
				copy(layer[ring].y, 0);

				tween(layer[go_VR_already].alpha|layer[play_tour].alpha, 0|0, , ,
					set(layer[play_tour].visible, false);
					set(layer[go_VR_already].visible, false);
				);
				delayedcall(0.15,
					tween(layer[ring].x, 0, 0.5, ,
						loadingpercent_startloading();
						loadscene(0, null, MERGE, BLEND(0.5));
					);
				);
			);
		"
	/>
</krpano>