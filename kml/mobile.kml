<!--
	Mobile layout, VR mode entrypoint
-->

<krpano>

	<layer name="open_catalog"
		url="../img/tiles-mobile.png"
		keep="true"

		visible="false"

		align="bottomcenter"
		x="0" y="24"
		y_shown="24"

		devices="mobile"

		ondown="
			set(layer[ring].parent, open_catalog);
			set(layer[ring].y, -12);
			callwith(layer[ring], layer[ring].show());
		"
		onup="
			callwith(layer[ring], layer[ring].hide());
		"

		onclick="
			show_catalog();
		" 
	/>

	<layer name="ring"
		url="../img/ring.png"
		keep="true"

		align="center"
		x="0" y="0"

		vr="true"

		visible="false"
		alpha="0"

		scale.mobile="1"
		scale.tablet="0.5"

		zorder="10"

		enabled="false"
		show="
			set(visible, true);
			tween(alpha, 1, 0.05);
		"
		hide="
			tween(alpha, 0, 0.05, , 
				set(visible, false);
			);
		"
	/>

</krpano>